<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout4"
    android:background="@drawable/gradient_bg"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_row">
        <ImageView
            android:src="@drawable/edit_button"
            android:id="@+id/navButton"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="30dp"
            android:maxHeight="30dp"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true" />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/delete_button"
            android:src="@drawable/delete"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/navButton"
            android:layout_marginRight="10dp"
            android:alpha="0" />
        <TextView
            android:text="Module Title"
            android:id="@+id/setting_title"
            android:textSize="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:layout_marginTop="16dp"
            android:gravity="left"
            android:layout_marginLeft="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/navButton" />
    </RelativeLayout>
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/display_row"
        android:layout_below="@id/title_row">
    <!--<include xmlns:tools="http://schemas.android.com/tools"
            layout="@layout/weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:alpha="0"
            tools:visibility="invisible"
            android:id="@+id/weather_settings" />-->
        <ImageView
            android:src="@android:drawable/ic_menu_gallery"
            android:id="@+id/moduleImage"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp" />
    </RelativeLayout>
</RelativeLayout>