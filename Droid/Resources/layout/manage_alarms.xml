<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="#ffe8e8e8">
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1">
        <RelativeLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/clock_settings"
            android:background="#ffffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/picker_holder">
                <LinearLayout
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:id="@+id/timescrollers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentLeft="false"
                    android:layout_centerInParent="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="false"
                    android:layout_alignWithParentIfMissing="false">
                    <NumberPicker
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/hour" />
                    <NumberPicker
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/minute" />
                    <NumberPicker
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/ampm" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/RepeatSelectorLayout"
                android:layout_below="@+id/picker_holder"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:id="@+id/repeatDaysInput">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="S"
                        android:id="@+id/sundayInput"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="20dp" />
                    <View
                        android:layout_height="fill_parent"
                        android:layout_width="1dp"
                        android:background="#c1c1c1"
                        android:id="@+id/view7" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="M"
                        android:id="@+id/mondayInput"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="20dp" />
                    <View
                        android:layout_height="fill_parent"
                        android:layout_width="1dp"
                        android:background="#c1c1c1"
                        android:id="@+id/view8" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="T"
                        android:id="@+id/tuesdayInput"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="20dp" />
                    <View
                        android:layout_height="fill_parent"
                        android:layout_width="1dp"
                        android:background="#c1c1c1"
                        android:id="@+id/view9" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="W"
                        android:id="@+id/wednesdayInput"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="20dp" />
                    <View
                        android:layout_height="fill_parent"
                        android:layout_width="1dp"
                        android:background="#c1c1c1"
                        android:id="@+id/view10" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="T"
                        android:id="@+id/thursdayInput"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="20dp" />
                    <View
                        android:layout_height="fill_parent"
                        android:layout_width="1dp"
                        android:background="#c1c1c1"
                        android:id="@+id/view11" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="F"
                        android:id="@+id/fridayInput"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="20dp" />
                    <View
                        android:layout_height="fill_parent"
                        android:layout_width="1dp"
                        android:background="#c1c1c1"
                        android:id="@+id/view12" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="S"
                        android:id="@+id/saturdayInput"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="20dp" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:id="@+id/settings_row"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#ffffffff"
            android:layout_below="@id/clock_settings"
            android:layout_height="0dp"
            android:paddingTop="40dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">
            <ImageView
                android:src="@drawable/settings_tone"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView1"
                android:layout_weight="1" />
            <ImageView
                android:src="@drawable/settings_snooze"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView1"
                android:layout_weight="1" />
            <ImageView
                android:src="@drawable/settings_speech"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView1"
                android:layout_weight="1" />
            <ImageView
                android:src="@drawable/settings_order"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView1"
                android:layout_weight="1" />
            <ImageView
                android:src="@drawable/settings_about"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView1"
                android:layout_weight="1" />
        </LinearLayout>
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2"
            android:layout_below="@id/clock_settings"
            android:background="#ffffffff">
            <TextView
                android:text="Save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/save_button"
                android:layout_alignParentRight="true"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="20dp"
                android:textSize="20dp" />
        </RelativeLayout>
    </RelativeLayout>
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alarm_display_scroller"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/alarm_viewer" />
    </ScrollView>
</LinearLayout>