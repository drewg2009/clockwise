<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tone_row_root"
    android:paddingTop="3dp"
    android:paddingBottom="3dp">
    <ImageView
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/tone_image" />
    <TextView
        android:text="Tone Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tone_title"
        android:layout_toRightOf="@id/tone_image"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffb7b7b7"
        android:layout_below="@id/tone_image"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="20dp" />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tone_radio_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:theme="@style/RadioButton" />
</RelativeLayout>