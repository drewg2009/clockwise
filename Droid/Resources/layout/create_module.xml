<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:orientation="vertical"
    android:background="@drawable/create_module_bg">
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout1"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <ImageView
            android:src="@drawable/cancel_create_module"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/cancel_button"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <TextView
        android:text="Create a Module"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/create_module_title"
        android:textColor="#ffffffff"
        android:textSize="35dp"
        android:paddingLeft="50dp" />
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1">
        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout1">
            <TextView
                android:text="Single"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/single"
                android:textSize="20dp"
                android:textColor="#ffffffff"
                android:textStyle="normal"
                android:paddingLeft="50dp"
                android:paddingBottom="7dp"
                android:paddingTop="7dp" />
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/weatherRow"
                android:paddingTop="7dp"
                android:paddingBottom="7dp">
                <ImageView
                    android:src="@drawable/weather_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView1"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:text="Get the weather in your area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/weather_desc"
                    android:textColor="#ffffffff"
                    android:textSize="14dp"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true" />
                <ImageView
                    android:src="@drawable/plus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/addWeather"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
            <include
                layout="@layout/weather"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="50dp"
                android:id="@+id/weather_settings" />
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_marginLeft="50dp"
                android:id="@+id/view1" />
            <TextView
                android:text="Custom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/custom"
                android:textSize="20dp"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:paddingLeft="50dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp" />
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_marginLeft="50dp"
                android:id="@+id/view2"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newsRow"
                android:paddingTop="7dp"
                android:paddingBottom="7dp">
                <ImageView
                    android:src="@drawable/news_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView1"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:text="Get news by category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/news_desc"
                    android:textColor="#ffffffff"
                    android:textSize="14dp"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true" />
                <ImageView
                    android:src="@drawable/plus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/addNews"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        <!-- <include
                layout="@layout/news"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="50dp"
                android:id="@+id/news_settings" />-->
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_marginLeft="50dp"
                android:id="@+id/view2"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/redditRow"
                android:paddingTop="7dp"
                android:paddingBottom="7dp">
                <ImageView
                    android:src="@drawable/reddit_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView1"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:text="Get top Reddit posts by subreddit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/reddit_desc"
                    android:textColor="#ffffffff"
                    android:textSize="14dp"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true" />
                <ImageView
                    android:src="@drawable/plus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/addReddit"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_marginLeft="50dp"
                android:id="@+id/view3"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/twitterRow"
                android:paddingTop="7dp"
                android:paddingBottom="7dp">
                <ImageView
                    android:src="@drawable/twitter_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView1"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:text="Get top Twitter posts by user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/twitter_desc"
                    android:textColor="#ffffffff"
                    android:textSize="14dp"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true" />
                <ImageView
                    android:src="@drawable/plus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/addTwitter"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_marginLeft="50dp"
                android:id="@+id/view4"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/countdownRow"
                android:paddingTop="7dp"
                android:paddingBottom="7dp">
                <ImageView
                    android:src="@drawable/countdown_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView1"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:text="Countdown to an event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/countdown_desc"
                    android:textColor="#ffffffff"
                    android:textSize="14dp"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true" />
                <ImageView
                    android:src="@drawable/plus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/addCountdown"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_marginLeft="50dp"
                android:id="@+id/view2"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/countdownRow"
                android:paddingTop="7dp"
                android:paddingBottom="7dp">
                <ImageView
                    android:src="@drawable/todo_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView1"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:text="Set some reminders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/reminders_desc"
                    android:textColor="#ffffffff"
                    android:textSize="14dp"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true" />
                <ImageView
                    android:src="@drawable/plus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/addReminders"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_marginLeft="50dp"
                android:id="@+id/view2"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/trafficRow"
                android:paddingTop="7dp"
                android:paddingBottom="7dp">
                <ImageView
                    android:src="@drawable/traffic_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView1"
                    android:layout_marginLeft="10dp" />
                <ImageView
                    android:src="@drawable/plus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/addTraffic"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true" />
                <TextView
                    android:text="Get travel time to a destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/traffic_desc"
                    android:textColor="#ffffffff"
                    android:textSize="14dp"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_marginLeft="50dp"
                android:id="@+id/view2"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />
            <TextView
                android:text="Toggle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/toggle_text"
                android:textSize="20dp"
                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:paddingLeft="50dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp" />
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_marginLeft="50dp"
                android:id="@+id/view2"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/factRow"
                android:paddingTop="7dp"
                android:paddingBottom="7dp">
                <ImageView
                    android:src="@drawable/traffic_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView1"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:text="Get the fact of the day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fact_desc"
                    android:textColor="#ffffffff"
                    android:textSize="14dp"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true" />
                <ImageSwitcher
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:id="@+id/factToggle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_marginLeft="50dp"
                android:id="@+id/view2"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/factRow"
                android:paddingTop="7dp"
                android:paddingBottom="7dp">
                <ImageView
                    android:src="@drawable/traffic_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView1"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:text="Get the quote of the day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quote_desc"
                    android:textColor="#ffffffff"
                    android:textSize="14dp"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true" />
                <ImageSwitcher
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:id="@+id/quoteToggle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>
            <View
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_marginLeft="50dp"
                android:id="@+id/view2"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />
            <RelativeLayout
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/factRow"
                android:paddingTop="7dp"
                android:paddingBottom="7dp">
                <ImageView
                    android:src="@drawable/traffic_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/imageView1"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:text="This day in history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/history_desc"
                    android:textColor="#ffffffff"
                    android:textSize="14dp"
                    android:layout_marginLeft="50dp"
                    android:layout_centerVertical="true" />
                <ImageSwitcher
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:id="@+id/tdihToggle"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>